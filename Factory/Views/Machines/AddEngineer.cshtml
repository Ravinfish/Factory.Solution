@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<h2>Add an engineer</h2>
<hr />
<h4>Choose a Engineer to add to this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select an Engineer")
  @foreach (var engineer in ViewBag.Engineers as List<Factory.Models.Engineer>)
  {
    @Html.DropDownList("EngineerId")
  }

  <input type="submit" value="Save" />
}